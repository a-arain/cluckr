<%- include("../partials/header")%>


<% if (loggedIn) { %>

    <div style="border: solid 1px gray; padding: 10px">
    
            <form action="/new" method="POST">
        
                <div class="form-group">
                    <label for="username" style="color: lightgrey">Content</label>
                    <textarea
                    name="content"
                    cols="30" rows="4"
                    class="form-control"
                    placeholder="Whatchoo cluckin' 'bout?"></textarea>
                </div>
        
                <div class="form-group">
                    <label for="username" style="color: lightgrey">Image Url</label>
                    <input
                    type="text"
                    class="form-control"
                    name="image_Url"
                    placeholder="e.g. http://imgur.com/coolpicture.jpg"
                    />
                </div>
        
                <button class="btn btn-outline-secondary" type="submit">Cluck!</button>
            </form>
        </div>
<%} else { %>
<div class="card mb-4">
    <div>
        <p>You are not signed in!!<p>
        <p> Please sign in </p>
    </div>
</div>
<% } %>

<%- include("../partials/footer")%>